---
interface Props {
  title: string;
  image: string;
  imageAlt: string;
}

const { title, image, imageAlt } = Astro.props;
---

<div class="relative h-[60vh] w-full overflow-hidden rounded-3xl mb-12 group">
  <img
    src={image}
    alt={imageAlt}
    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
  />
  <div
    class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"
  >
  </div>
  <div class="absolute bottom-0 left-0 p-8 md:p-12 w-full">
    <h1
      class="text-4xl md:text-6xl font-black text-white uppercase tracking-tight mb-4"
    >
      {title}
    </h1>
    <div class="h-1 w-24 bg-brand-red rounded-full"></div>
  </div>
</div>
