<section id="contacto" class="py-24 bg-white relative overflow-hidden">
  <div class="max-w-4xl mx-auto px-6 lg:px-8 relative z-10">
    <div class="text-center mb-12">
      <span
        class="text-brand-green font-bold tracking-widest text-xs uppercase mb-2 block"
        >Intranet Agencias</span
      >
      <h2 class="text-4xl font-bold text-slate-900 mb-4">
        Registro de Aliados
      </h2>
      <p class="text-gray-500">
        Accede a tarifas netas confidenciales y material de marketing.
      </p>
    </div>

    <div
      class="bg-white p-6 md:p-12 rounded-3xl border border-gray-100 shadow-2xl"
    >
      <form class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <label
              class="block text-xs font-bold text-slate-500 uppercase tracking-wide mb-2"
              >Agencia / Raz√≥n Social</label
            >
            <input
              type="text"
              id="agencia"
              class="w-full px-5 py-3 rounded-lg bg-gray-50 border border-gray-200 text-slate-900 focus:border-brand-red focus:ring-1 focus:ring-brand-red outline-none transition"
              required
            />
          </div>
          <div>
            <label
              class="block text-xs font-bold text-slate-500 uppercase tracking-wide mb-2"
              >ID Fiscal / RUC</label
            >
            <input
              type="text"
              id="ruc"
              class="w-full px-5 py-3 rounded-lg bg-gray-50 border border-gray-200 text-slate-900 focus:border-brand-red focus:ring-1 focus:ring-brand-red outline-none transition"
            />
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <label
              class="block text-xs font-bold text-slate-500 uppercase tracking-wide mb-2"
              >Contacto Comercial</label
            >
            <input
              type="text"
              id="contacto"
              class="w-full px-5 py-3 rounded-lg bg-gray-50 border border-gray-200 text-slate-900 focus:border-brand-red focus:ring-1 focus:ring-brand-red outline-none transition"
              required
            />
          </div>
          <div>
            <label
              class="block text-xs font-bold text-slate-500 uppercase tracking-wide mb-2"
              >Email Corporativo</label
            >
            <input
              type="email"
              id="email"
              class="w-full px-5 py-3 rounded-lg bg-gray-50 border border-gray-200 text-slate-900 focus:border-brand-red focus:ring-1 focus:ring-brand-red outline-none transition"
              required
            />
          </div>
        </div>

        <div class="pt-6">
          <button
            type="submit"
            id="submit-btn"
            class="w-full py-4 btn-brand rounded-xl font-bold text-white shadow-lg text-lg uppercase tracking-wide"
          >
            Solicitar Acceso B2B
          </button>
        </div>
      </form>
    </div>
  </div>
</section>

<script>
  const form = document.querySelector("form");
  form?.addEventListener("submit", (e) => {
    e.preventDefault();

    const agencia = (document.getElementById("agencia") as HTMLInputElement)
      .value;
    const ruc = (document.getElementById("ruc") as HTMLInputElement).value;
    const contacto = (document.getElementById("contacto") as HTMLInputElement)
      .value;
    const email = (document.getElementById("email") as HTMLInputElement).value;

    const message = `*Nueva Solicitud de Registro B2B*%0A%0A*Agencia:* ${agencia}%0A*RUC:* ${ruc}%0A*Contacto:* ${contacto}%0A*Email:* ${email}`;

    const phoneNumber = "51979758781"; // Replace with actual number if different
    const whatsappUrl = `https://wa.me/${phoneNumber}?text=${message}`;

    window.open(whatsappUrl, "_blank");
  });
</script>
