---
interface Props {
  icon?: any;
}

const { icon: Icon } = Astro.props;
---

<div class="flex items-start gap-3 mb-4">
  {
    Icon && (
      <div class="mt-1 shrink-0 text-brand-green">
        <Icon class="w-5 h-5" />
      </div>
    )
  }
  <p class="text-gray-700 leading-relaxed">
    <slot />
  </p>
</div>
