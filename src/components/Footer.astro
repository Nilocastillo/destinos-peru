---
import Icon from "./Icon.astro";
---

<footer class="bg-slate-900 text-white py-16">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Company Info -->
      <div>
        <div class="flex items-center gap-3 mb-6">
          <a href="/" class="flex items-center gap-2 group cursor-pointer">
            <img
              src="/logo-destino-peru-viajes.webp"
              alt="Destino Peru Viajes"
              class="h-10 lg:h-12 w-auto object-contain"
              width="350"
              height="146"
              decoding="async"
              loading="lazy"
              fetchpriority="low"
            />
          </a>
        </div>
        <div class="text-slate-400 text-sm space-y-2">
          <p>
            <strong class="text-white">Razón Social:</strong><br />Destino Perú
            Viajes Cusco S.A.C.
          </p>
          <p><strong class="text-white">RUC:</strong> 20614046601</p>
        </div>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="font-bold text-white text-lg mb-6">Contacto</h3>
        <ul class="text-slate-400 text-sm space-y-4">
          <li class="flex items-start gap-3">
            <Icon name="phone" class="w-4 h-4 mt-1 text-brand-green" />
            <span>+51 934 470 736</span>
          </li>
          <li class="flex items-start gap-3">
            <Icon name="sms" class="w-4 h-4 mt-1 text-brand-green" />
            <span>Info@destinoperuviajes.com</span>
          </li>
          <li class="flex items-start gap-3">
            <Icon name="location" class="w-4 h-4 mt-1 text-brand-green" />
            <span>Apv Villa Guadalupe A-5<br />Cusco, Perú</span>
          </li>
        </ul>
      </div>

      <!-- Links -->
      <div>
        <h3 class="font-bold text-white text-lg mb-6">General</h3>
        <ul class="text-slate-400 text-sm space-y-3">
          <li>
            <a
              href="/libro-de-reclamaciones"
              class="hover:text-brand-green transition"
              >Libro de Reclamaciones</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-brand-green transition"
              >Política de Privacidad</a
            >
          </li>
          <li>
            <a href="#" class="hover:text-brand-green transition"
              >Términos y Condiciones</a
            >
          </li>
        </ul>
      </div>

      <!-- Social & Payments -->
      <div>
        <h3 class="font-bold text-white text-lg mb-6">Síguenos</h3>
        <div class="flex gap-4 mb-8">
          <a
            href="https://www.facebook.com/destinoperuviaje"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center text-slate-400 hover:bg-blue-600 hover:text-white transition-all duration-300"
          >
            <Icon name="facebook" class="w-5 h-5" />
          </a>
          <a
            href="https://www.instagram.com/destinoperuviaje"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center text-slate-400 hover:bg-pink-600 hover:text-white transition-all duration-300"
          >
            <Icon name="instagram" class="w-5 h-5" />
          </a>
          <a
            href="https://www.tiktok.com/@destinoperuviajes"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center text-slate-400 hover:bg-black hover:text-white transition-all duration-300 border border-slate-700 hover:border-slate-600"
          >
            <Icon name="tiktok" class="w-5 h-5" />
          </a>
          <!-- <a
            href="https://youtube.com"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center text-slate-400 hover:bg-red-600 hover:text-white transition-all duration-300"
          >
            <Icon name="youtube" class="w-5 h-5" />
          </a> -->
        </div>

        <h3 class="font-bold text-white text-lg mb-4">Aceptamos</h3>
        <div class="flex gap-3 text-2xl text-slate-400">
          <Icon name="visa" class="w-8 h-8 hover:text-white transition" />
          <Icon name="mastercard" class="w-8 h-8 hover:text-white transition" />
          <Icon name="amex" class="w-8 h-8 hover:text-white transition" />
          <Icon name="paypal" class="w-8 h-8 hover:text-white transition" />
        </div>
      </div>
    </div>

    <div
      class="border-t border-slate-800 pt-8 text-center text-slate-500 text-xs"
    >
      © 2025 Destino Perú Viajes Cusco S.A.C. Todos los derechos reservados.
    </div>
  </div>
</footer>
