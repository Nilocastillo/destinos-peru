---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Services from "../components/Services.astro";
import Features from "../components/Features.astro";
import Certifications from "../components/Certifications.astro";
import Tours from "../components/Tours.astro";
import Packages from "../components/Packages.astro";
import ViatorReviews from "../components/ViatorReviews.astro";
import Contact from "../components/Contact.astro";
import Modal from "../components/Modal.astro";

const title =
  "Destino Perú Viajes | Operador Mayorista B2B Cusco & Machu Picchu";
const description =
  "Somos el aliado estratégico en Cusco para agencias de viajes. Tarifas netas, marca blanca, logística MICE y operación directa 100% confiable.";
const canonical = "https://destinoperuviajes.com";
---

<Layout title={title} description={description} canonical={canonical}>
  <Hero />
  <About />
  <Features />
  <Services />
  <Certifications />
  <Tours />
  <Packages />
  <ViatorReviews />
  <Contact />
  <Modal />
</Layout>
